<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/lighttype4linear">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:id="@+id/ltype4_icon"
                android:layout_weight="1.5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/ltype4_remark"
                android:layout_weight="1.3"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#ffffff" />

            <Space
                android:layout_width="0dp"
                android:layout_height="20px"
                android:layout_weight="0.2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/ltype4_state"
                android:layout_weight="1.3"
                android:gravity="center"
                android:layout_gravity="center" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/ltype4button"
                android:layout_weight="1.8"
                android:background="@drawable/lighttype4_button" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:id="@+id/ltype4_checkbox"
                android:layout_weight="0.7"
                android:checked="false"
                android:layout_gravity="center"
                android:button="@drawable/checkbox_checked_style"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</merge>