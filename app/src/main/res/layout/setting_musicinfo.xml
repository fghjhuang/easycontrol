<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="subnetID:"
        android:id="@+id/musictvsub"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/music_subedit"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/music_subedit"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/musictvsub"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="number"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/musictvsub" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="deviceID:"
        android:id="@+id/musictvdev"
        android:layout_below="@+id/musictvsub"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/music_subedit"
        android:layout_toStartOf="@+id/music_subedit"
        android:layout_alignBottom="@+id/music_devedit"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/music_devedit"
        android:layout_below="@+id/music_subedit"
        android:layout_toRightOf="@+id/musictvdev"
        android:layout_alignRight="@+id/music_subedit"
        android:inputType="number"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/musictvsub"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>