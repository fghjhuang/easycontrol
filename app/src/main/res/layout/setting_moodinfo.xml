<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="name:"
        android:id="@+id/moodname"
        android:gravity="center"
        android:layout_below="@+id/imageView7"
        android:layout_toRightOf="@+id/space3"
        android:layout_toEndOf="@+id/space3"
        android:layout_alignBottom="@+id/changemoodname" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/changemoodname"
        android:layout_below="@+id/imageView7"
        android:layout_toRightOf="@+id/moodname"
        android:layout_toEndOf="@+id/moodname"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="icon:"
        android:id="@+id/moodicon"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/moodname"
        android:layout_toLeftOf="@+id/imageView7"
        android:layout_alignLeft="@+id/moodname"
        android:layout_alignRight="@+id/moodname" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView7"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/moodname"
        android:layout_toEndOf="@+id/moodname" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/moodname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/space3" />

</RelativeLayout>