<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="oldpassword:"
        android:id="@+id/setting_seclog_tvstartdate"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/setting_cpw_oldp"
        android:layout_toLeftOf="@+id/setting_cpw_oldp"
        android:layout_toStartOf="@+id/setting_cpw_oldp"
        android:gravity="center"
        android:paddingLeft="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="new password:"
        android:id="@+id/setting_seclog_tvenddate"
        android:layout_below="@+id/setting_seclog_tvstartdate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/setting_cpw_newp1"
        android:gravity="center"
        android:paddingLeft="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="new password:"
        android:id="@+id/logitem_type"
        android:layout_below="@+id/setting_seclog_tvenddate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/setting_cpw_newp2"
        android:gravity="center"
        android:paddingLeft="3dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/setting_cpw_oldp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/setting_seclog_tvenddate"
        android:layout_toEndOf="@+id/setting_seclog_tvenddate"
        android:maxLength="6"
        android:numeric="signed" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/setting_cpw_newp1"
        android:layout_below="@+id/setting_cpw_oldp"
        android:layout_toRightOf="@+id/setting_seclog_tvenddate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxLength="6"
        android:numeric="signed" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/setting_cpw_newp2"
        android:layout_below="@+id/setting_seclog_tvenddate"
        android:layout_toRightOf="@+id/logitem_type"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxLength="6"
        android:numeric="signed" />
</RelativeLayout>