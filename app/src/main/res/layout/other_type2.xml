<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
        <com.dave.smartbushome.assist.SwipeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/othertype2swipe"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:minHeight="?android:attr/listPreferredItemHeight">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:id="@+id/othertype2linear">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:id="@+id/othertype2imageView"
                android:layout_weight="1.5"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="other"
                android:id="@+id/othertype2rmark"
                android:layout_weight="1.3"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="0.2"
                android:id="@+id/sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="unknown"
                android:id="@+id/othertype2state"
                android:layout_weight="1.3"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/statecolor" />

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/othertype2on"
                android:layout_weight="1.1"
                android:textSize="8dp"
                android:gravity="bottom|center"
                android:maxHeight="50dp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:background="@mipmap/curtain_open"
                android:layout_marginLeft="2dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/othertype2stop"
                android:layout_weight="1.1"
                android:textSize="8dp"
                android:gravity="bottom|center"
                android:maxHeight="50dp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:background="@mipmap/curtain_stop"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/othertype2off"
                android:layout_weight="1.1"
                android:textSize="8dp"
                android:gravity="bottom|center"
                android:maxHeight="50dp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:background="@mipmap/curtain_close"
                android:layout_marginRight="2dp" />

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:id="@+id/othertype2delete"
                android:checked="false"
                android:layout_weight="0.7"
                android:button="@drawable/checkbox_checked_style"
                android:visibility="invisible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#d20001" >

            <LinearLayout
                android:id="@+id/othertype2_delete"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_delete"
                    />
            </LinearLayout>
        </LinearLayout>
        </com.dave.smartbushome.assist.SwipeLayout>
    </LinearLayout>
</merge>