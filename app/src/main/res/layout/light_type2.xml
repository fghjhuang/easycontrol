<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
        <com.dave.smartbushome.assist.SwipeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/lighttype2swipe"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:minHeight="?android:attr/listPreferredItemHeight">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:id="@+id/type2linear">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:id="@+id/imageView2"
        android:layout_weight="1.5"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="light"
        android:id="@+id/remark2"
        android:layout_weight="1.3"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="15dp" />

    <Space
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="0.2"
        android:id="@+id/sp3" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="unknown"
        android:id="@+id/state2"
        android:layout_weight="1.3"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/statecolor" />

    <SeekBar
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:id="@+id/seekBar"
        android:layout_weight="2.8"
        android:layout_gravity="center"
        android:splitTrack="false"
        android:max="100"
        android:background="@drawable/media_back" />

    <CheckBox
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:id="@+id/checkBox2"
        android:checked="false"
        android:layout_weight="0.7"
        android:button="@drawable/checkbox_checked_style"
        android:visibility="invisible" />
</LinearLayout>
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#d20001" >

                <LinearLayout
                    android:id="@+id/lighttype2_delete"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_delete"
                        />
                </LinearLayout>
            </LinearLayout>
        </com.dave.smartbushome.assist.SwipeLayout>
    </LinearLayout>
</merge>