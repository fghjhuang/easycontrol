<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:id="@+id/schedule_selflayout">

            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
                android:id="@+id/shcedulelinear">

        <TextView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:id="@+id/schedule_time"
            android:layout_weight="1.2"
            android:layout_gravity="center"
            android:text="17:56"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:id="@+id/schedule_name"
            android:layout_weight="1.2"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="15dp" />

                <com.kyleduo.switchbutton.SwitchButton
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:id="@+id/schedule_switch"
                    android:checked="false"
                    app:kswAnimationDuration="300"
                    app:kswBackDrawable="@drawable/ios_back_drawable"
                    app:kswBackMeasureRatio="1.4"
                    app:kswThumbDrawable="@drawable/ios_thumb_selector"
                    app:kswThumbMarginBottom="-8dp"
                    app:kswThumbMarginLeft="-5dp"
                    app:kswThumbMarginRight="-5dp"
                    app:kswThumbMarginTop="-2.5dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:paddingRight="15dp"
                    android:gravity="center"
                    android:paddingTop="40dp"
                    android:paddingLeft="10dp" />

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:id="@+id/schedule_delete"
                    android:checked="false"
                    android:layout_weight="0.5"
                    android:button="@drawable/checkbox_checked_style"
                    android:visibility="invisible" />
    </LinearLayout>

            <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/schedule_state"
        android:layout_weight="1.3"
        android:layout_gravity="center"
                android:textColor="#f1f1f1"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:layout_below="@+id/shcedulelinear" />
        </RelativeLayout>

    </LinearLayout>
</merge>